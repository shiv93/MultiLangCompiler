<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_lay_1"
    android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    <Spinner
        android:id="@+id/spinner_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
         />

    <Button
        android:id="@+id/bcompile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinner_lang"
        android:layout_alignTop="@+id/spinner_lang"
        android:layout_toLeftOf="@+id/bInput"
        android:text="Run" />

      <Button
          android:id="@+id/bInput"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/spinner_lang"
          android:layout_alignTop="@+id/spinner_lang"
          android:layout_toLeftOf="@+id/image_add"
          android:text="Input" />
      
      <ImageView
      android:id="@+id/image_add"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/file_name"
      android:layout_alignParentTop="true"
      android:layout_marginRight="18dp"
      android:layout_toLeftOf="@+id/image_subtract"
      android:clickable="true"
      android:src="@drawable/ic_plus" />

    <ImageView
        android:id="@+id/image_subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinner_lang"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/spinner_lang"
        android:clickable="true"
        android:src="@drawable/ic_minus" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_lang"
        android:background="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/file_name"
        android:textColor="#0000ff"
        android:text="**Untitled"
        android:textStyle="bold|italic"
        
         />
        
    
        
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:id="@+id/ll"
        android:fillViewport="true"
        android:layout_below="@+id/file_name"
         >

          <RelativeLayout
              android:id="@+id/ll1"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:background="#000000">
<!--               android:layout_toRightOf="@+id/textnumber"  -->
             
              
